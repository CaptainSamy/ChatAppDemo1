<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/messageLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/message_profile_image"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/user_profile"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:id="@+id/timeTv"
            android:text="02/03/2020 05:50PM"
            android:textColor="?attr/tintcolor"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentTop="@+id/receiver_message_text"
            android:background="@drawable/sender_message_layout"
            android:text="sender messages"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/isSeenTv"
        android:textAlignment="textEnd"
        android:text="Delivered"
        android:textColor="?attr/tintcolor"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>