<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/message_profile_image"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/user_profile" />
    <TextView
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/nameTv"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/lN_GroupChat"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iV_file"
            android:src="@drawable/ic_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:textSize="15sp"
            android:padding="5dp"
            android:maxWidth="200dp"
            android:background="@drawable/sender_message_layout"
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_below="@id/lN_GroupChat"
        android:layout_alignParentRight="true"
        android:id="@+id/messageIv"
        android:scaleType="fitXY"
        android:src="@drawable/image_iv"
        android:layout_height="200dp"
        android:layout_width="220dp" />

    <TextView
        android:visibility="gone"
        android:layout_toLeftOf="@id/lN_GroupChat"
        android:id="@+id/timeTv"
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="5dp" />

</RelativeLayout>