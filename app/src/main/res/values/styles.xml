<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="colorPrimary">#2cb9b0</item>
        <item name="colorPrimaryDark">#00bdb5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#F5F5F5</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#2196f3</item>
        <item name="tabcolor">#00bdb5</item>
        <item name="tabtextcolor">#424242</item>
        <item name="tabselectcolor">#00c7bf</item>
        <item name="icon_email">@drawable/email_icon</item>
        <item name="icon_pass">@drawable/password_icon</item>
        <item name="no_search_result">@drawable/no_search_light</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="colorPrimary">#2cb9b0</item>
        <item name="colorPrimaryDark">#00bdb5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#26282f</item>
        <item name="cardbackground">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196f3</item>
        <item name="tabcolor">#00bdb5</item>
        <item name="tabtextcolor">#424242</item>
        <item name="tabselectcolor">#00c7bf</item>
        <item name="icon_email">@drawable/email_icon</item>
        <item name="icon_pass">@drawable/password_icon</item>
        <item name="no_search_result">@drawable/no_search_dark</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.DayNight.Dialog"/>
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/backgroundcolor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>
